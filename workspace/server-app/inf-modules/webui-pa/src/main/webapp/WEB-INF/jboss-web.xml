<?xml version="1.0" encoding="UTF-8"?>
<!-- без схемы из-за https://issues.jboss.org/browse/JBMETA-384 -->
<!-- <jboss-web xmlns="http://www.jboss.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" -->
<!-- xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/schema/jbossas/jboss-web_8_0.xsd" version="8.0"> -->
<jboss-web>
	<security-domain>argus-security-domain</security-domain>

	<!-- сопряжение с сервером и хостом, определенными в standalone.xml -->
	<server-instance>webui-mobile-server</server-instance>
	<virtual-host>default-host</virtual-host>

	<!-- cross context по умолчанию отключен, но отключим явно, подчеркивая, что приложение будет использоваться из незащищенных 
		сетей и должно быть ограничено по максимуму -->
	<disable-cross-context>true</disable-cross-context>
</jboss-web>
